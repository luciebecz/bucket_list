
<h1>All Bucket Lists</h1>
<%= link_to "Create A New Bucket List", new_bucketlist_path %>
<% if @bucketlists.any? %>
  <ul class='list-group'>
    <% @bucketlists.each do |bucketlist| %>
      <li class="list-group-item">
        <%= bucketlist.name %>
        <%= link_to "Show", bucketlist %> |
        <%= link_to 'Edit Name', edit_bucketlist_path(bucketlist)%> |
        <%= link_to 'Delete List', bucketlist_path(bucketlist), method: :delete, data: { confirm: 'Really Delete List?'}%>
      </li>
    <% end %>
  </ul>
<% else %>
  <h3> You have not created a bucket list </h3>
<% end %>
